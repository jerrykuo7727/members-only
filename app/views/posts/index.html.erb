<% provide(:username, @username) %>
<% if params[:name].nil? %>
  <h1>All Posts</h1>
  <% provide(:title, "All Posts") %>
<% else %>
  <h1>My Posts</h1>
  <% provide(:title, "My Posts") %>
<% end %>

<%= will_paginate %>
<div id="postboard">
  <% @posts.each do |post| %>
    <div class="post">
      <h2><%= post.title %></h2>
      <p><%= post.text %></p>
      <em>---- by 
        <% if session[:user_id].nil? %>
          <%= "********" %> 
          <%= link_to "(Sign in to see)", signin_path %>
        <% else %>
          <%= "#{post.user.name}" %>
        <% end %>
      </em>
    </div>
  <% end %>
</div>

<%= will_paginate %>