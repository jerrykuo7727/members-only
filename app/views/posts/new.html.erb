<% provide(:title, "New Post") %>
<%= render 'shared/errors', locals: {object: @post} %>
<h1>New Post</h1>
<div class="form">
<%= form_for :post, url: posts_path do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %><br>

  <%= f.label :text %>
  <%= f.text_area :text %><br>

  <%= f.submit "Submit", class: "btn btn-primary btn-lg"%>
<% end %>
</div>